# Database
DATABASE_URL="postgresql://user:password@localhost:5432/twinup"

# Server
PORT=3001
NODE_ENV="development"
CORS_ORIGIN="http://localhost:5173"

# AI Services - Choose your image generation provider
# Options: 'local' (free, slow), 'replicate' (FLUX, fast, ~$0.025/image), 'openai' (DALL-E 3, ~$0.04/image), 'mock' (free, placeholder)
AI_PROVIDER="local"

# OpenAI (for DALL-E 3 and prompt enhancement)
OPENAI_API_KEY="sk-..."

# Replicate (FLUX.1-dev) - Only needed if AI_PROVIDER=replicate
REPLICATE_API_TOKEN="r8_..."
REPLICATE_MODEL="black-forest-labs/flux-dev"
FLUX_GUIDANCE=3.5           # 0-10, higher = more prompt adherence
FLUX_NUM_STEPS=28           # 4-50, higher = better quality
FLUX_MEGAPIXELS=1           # 1 = 1024x1024, 0.25 = 512x512

# Local AI (ComfyUI/SD 1.5) - Only needed if AI_PROVIDER=local
COMFYUI_HOST="http://localhost:8188"
IMAGE_URL_BASE="http://localhost:3001/images"
MAX_CONCURRENT_GENERATIONS=2

# LangChain (optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT="https://api.smith.langchain.com"
LANGCHAIN_API_KEY="ls_..."
LANGCHAIN_PROJECT="twinup-game"

# Feature Flags
USE_LANGCHAIN_ORCHESTRATION=true
USE_MOCK_AI=true
PARALLEL_GENERATIONS=3
ENABLE_PROMPT_ENHANCEMENT=true
ENABLE_VISION_EVALUATION=false

# Storage (optional - for S3)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
S3_BUCKET="twinup-images"
