// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum GameStatus {
  WAITING
  IN_PROGRESS
  COMPLETED
  EXPIRED
}

enum GameMode {
  STANDARD
  EVERYONE_PLAYS
}

enum TeamType {
  GOOD
  EVIL
}

enum RoundStatus {
  SETUP
  PROMPTING
  GENERATING
  VOTING
  COMPLETE
}

enum ImageStatus {
  PENDING
  GENERATING
  COMPLETED
  FAILED
}

enum ConnectionStatus {
  CONNECTED
  DISCONNECTED
  REMOVED
}

// Models
model Game {
  id           String      @id @default(uuid())
  code         String      @unique
  hostName     String
  status       GameStatus  @default(WAITING)
  gameMode     GameMode    @default(STANDARD)
  currentRound Int         @default(0)
  totalRounds  Int         @default(5)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  expiresAt    DateTime

  players Player[]
  rounds  Round[]

  @@index([code])
  @@index([status])
}

model Player {
  id          String   @id @default(uuid())
  gameId      String
  name        String
  team        TeamType
  score       Int      @default(0)
  isHost      Boolean  @default(false)
  joinedAt    DateTime @default(now())
  timesPlayed Int      @default(0) // Track how many rounds this player has participated in

  // Connection tracking
  socketId         String?
  lastHeartbeat    DateTime?
  connectionStatus ConnectionStatus  @default(CONNECTED)
  disconnectedAt   DateTime?

  game        Game         @relation(fields: [gameId], references: [id], onDelete: Cascade)
  submissions Submission[]
  votes       Vote[]

  @@index([gameId])
  @@index([gameId, team])
  @@index([connectionStatus])
  @@index([lastHeartbeat])
}

model Round {
  id                String       @id @default(uuid())
  gameId            String
  roundNumber       Int
  referenceImageUrl String
  referencePrompt   String
  goodPlayerId      String?
  evilPlayerId      String?
  status            RoundStatus  @default(SETUP)
  startedAt         DateTime?
  endedAt           DateTime?
  winningTeam       TeamType?
  promptingDeadline DateTime?    // When prompting phase should end (30s from start)
  autoCompleted     Boolean      @default(false) // Track if auto-completed due to timeout
  createdAt         DateTime     @default(now())

  // Image safety tracking
  referenceImageStatus          ImageStatus @default(PENDING)
  referenceImageError           String?
  referenceImageAttempts        Int         @default(0)
  allImagesReady                Boolean     @default(false)
  imageGenerationStartedAt      DateTime?
  imageGenerationCompletedAt    DateTime?

  game        Game         @relation(fields: [gameId], references: [id], onDelete: Cascade)
  submissions Submission[]
  votes       Vote[]

  @@unique([gameId, roundNumber])
  @@index([gameId])
  @@index([status])
}

model Submission {
  id          String    @id @default(uuid())
  roundId     String
  playerId    String
  team        TeamType
  prompt      String
  imageUrl    String?
  generatedAt DateTime?
  submittedAt DateTime  @default(now()) // Track when prompt was submitted
  createdAt   DateTime  @default(now())

  // Image generation safety tracking
  imageStatus        ImageStatus @default(PENDING)
  imageError         String?
  generationAttempts Int         @default(0)

  round  Round  @relation(fields: [roundId], references: [id], onDelete: Cascade)
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([roundId, team])
  @@index([roundId])
  @@index([playerId])
  @@index([imageStatus])
}

model Vote {
  id         String   @id @default(uuid())
  roundId    String
  playerId   String
  votedTeam  TeamType
  createdAt  DateTime @default(now())

  round  Round  @relation(fields: [roundId], references: [id], onDelete: Cascade)
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([roundId, playerId])
  @@index([roundId])
}
