# Docker Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ai_game
POSTGRES_DB=ai_game
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# AI Service Configuration
AI_PROVIDER=local
USE_MOCK_AI=false
COMFYUI_HOST=http://comfyui:8188
IMAGE_URL_BASE=http://localhost:3001/images

# AI Performance Settings
ENABLE_PARALLEL_GENERATION=true
COMFYUI_TIMEOUT=60000
MAX_CONCURRENT_GENERATIONS=2

# Server Configuration
NODE_ENV=production
PORT=3001
CORS_ORIGIN=http://localhost

# Frontend Configuration
VITE_API_URL=http://localhost:3001
VITE_WS_URL=http://localhost:3001

# Host Authentication
VITE_HOST_USERNAME=admin
VITE_HOST_PASSWORD=admin123

# Cloudflare Tunnel (optional - for production only)
# Get token from: https://dash.cloudflare.com
# CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here

# OpenAI Fallback (optional - if local AI fails)
# OPENAI_API_KEY=sk-proj-...

# Replicate Fallback (optional)
# REPLICATE_API_TOKEN=r8_...
